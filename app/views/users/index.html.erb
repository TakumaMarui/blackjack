<div class="scroll">
  <table class="list">
    <% @user.each.with_index(1) do |user, i| %>
      <tr>
        <td class="list_td list_number"><%= i %></td>
        <td class="list_td list_image">
          <% if user.image.attached? %>
            <%= link_to image_tag(user.image, class: :image), user_path(user.id) %>
          <% else %>
            <%= link_to image_tag(("default.png"), class: :image), user_path(user.id)%>
          <% end %>
        </td>
        <td class="list_td list_nickname"><%= link_to user.nickname, user_path(user.id), class: :nickname %></td>
        <td class="list_td list_coin"><%= user.coin %></td>
      </tr>
      <tr>
      </tr>
    <% end %>
  <table>
</div>