<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">プロフィール編集</h2>
      <%= form_with(model: @user, local: true) do |f|%>
        <div class="field">
          <%= f.label :image, "画像" %><br />
          <%= f.file_field :image, id:"user_image" %>
        </div>

        <div class="field">
          <%= f.label :profile, "プロフィール" %><br />
          <%= f.text_area :profile, class: :form__text, id:"user_profile" %>
        </div>

        <div class="actions">
          <%= f.submit "保存する", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>